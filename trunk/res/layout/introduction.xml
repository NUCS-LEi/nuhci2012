<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="10" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0px"
            android:layout_weight="10"
            android:gravity="top"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="\nGoodSleep helps you track  and improve your sleep quality via a wristband sensor. Things you need to do are:
            \n\n1) Use GoodSleep as your wake up alarm.\n\n2) Wear the sensor on your dominant wrist before going to bed. 
            \n\nTo find out the effect of daily behaviors on your sleep, please answer the GoodSleep questionnaire everyday." 
            android:textSize="20dp" />
    </ScrollView>

    <LinearLayout
        style="@style/menu_bg"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:gravity="center|right"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/introductionStartBtn"
            style="@style/button_text"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="Got it!" />
    </LinearLayout>

</LinearLayout>