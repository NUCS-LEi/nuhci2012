<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        style="@style/title"
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:text="Question Setting" />

    <TextView
        style="@style/normal_text"
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:gravity="top"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="Choose questions:" 
        android:textSize="22dp"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="3"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:text="" />

            <CheckBox
                android:id="@+id/coffeineCheckBox"
                
                android:layout_width="0px"
                android:paddingLeft=""
                
                
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Coffeine" 
                android:textSize="22dp"/>

            <CheckBox
                android:id="@+id/alcoholCheckBox"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Alcohol" 
                android:textSize="22dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:text="" />
            
            <CheckBox
                android:id="@+id/smokeCheckBox"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Smoke" 
                android:textSize="22dp"/>

            <CheckBox
                android:id="@+id/foodCheckBox"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Food" 
                android:textSize="22dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:text="" />
            
            <CheckBox
                android:id="@+id/exerciseCheckBox"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Physical Activity" 
                android
                android:textSize="22dp"/>

            <CheckBox
                android:id="@+id/stressCheckBox"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Stress" 
                android:textSize="22dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="2"
        android:gravity="bottom|right"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/questionSetBtn"
            style="@style/button_text"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:paddingLeft=""
            android:text="Done"
            android:textSize="24sp" />
    </LinearLayout>

</LinearLayout>