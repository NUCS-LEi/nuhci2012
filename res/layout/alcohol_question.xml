<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        style="@style/title"
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:text="Alcohol (2/6)" />

    <TextView
        style="@style/normal_text"
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="1.89"
        android:gravity="left"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="How many alcoholic drinks you had today?"
        android:textSize="28sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="2"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/alcoholBtn1"
                style="@style/button_text"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="None" />

            <Button
                android:id="@+id/alcoholBtn2"
                style="@style/button_text"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1-2" />

            <Button
                android:id="@+id/alcoholBtn3"
                style="@style/button_text"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="3-4" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/alcoholBtn4"
                style="@style/button_text"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="5-6" />

            <Button
                android:id="@+id/alcoholBtn5"
                style="@style/button_text"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="More" />

            <Button
                android:id="@+id/alcoholBtn6"
                style="@style/button_text"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Never" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="1.19"
        android:gravity="bottom"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/alcoholBackBtn"
            style="@style/button_text"
            android:layout_width="0px"
            android:layout_height="50dp"
            android:layout_weight="1.00"
            android:text="Back" />

        <Button
            android:id="@+id/alcoholNextBtn"
            style="@style/button_text"
            android:layout_width="0px"
            android:layout_height="51dp"
            android:layout_weight="1.00"
            android:text="Next" />

    </LinearLayout>

</LinearLayout>