<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        style="@style/title"
        android:id="@+id/smokeTitle"
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:text="Smoking (3/6)" />

    <TextView
        style="@style/normal_text"
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="1.5"
        android:gravity="left"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="How much did you smoke today?"
        android:textSize="28sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="2.5"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/smokeBtn1"
                style="@style/button_text"
                android:layout_width="0px"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:text="None" />

            <Button
                android:id="@+id/smokeBtn2"
                style="@style/button_text"
                android:layout_width="0px"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:text="Few" />

            <Button
                android:id="@+id/smokeBtn3"
                style="@style/button_text"
                android:layout_width="0px"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:text="1/2 pack" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/smokeBtn4"
                style="@style/button_text"
                android:layout_width="0px"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:text="1 pack" />

            <Button
                android:id="@+id/smokeBtn5"
                style="@style/button_text"
                android:layout_width="0px"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:text="More" />

            <Button
                android:id="@+id/smokeBtn6"
                style="@style/button_text"
                android:layout_width="0px"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:text="Never" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:gravity="center"
        android:orientation="horizontal" 
        style="@style/menu_bg">

        <Button
            android:id="@+id/smokeBackBtn"
            style="@style/button_text"
            android:layout_width="0px"
            android:layout_height="60dp"
            android:layout_weight="1.00"
            android:text="Back" />

        <Button
            android:id="@+id/smokeNextBtn"
            style="@style/button_text"
            android:layout_width="0px"
            android:layout_height="60dp"
            android:layout_weight="1.00"
            android:text="Next" />

    </LinearLayout>

</LinearLayout>